<script type="text/javascript">
function validate_phone(phone)
{
	return phone.match(/^(13|15|17|18)[0-9]\d{8}$/)
}

function validate_capcha(capcha)
{
	return capcha.match(/^\d{6}$/)
}

$(function(){

	$('.send_capcha').click(function(){
		var phone = $('.phone').val()
		if(validate_phone(phone)){
			$.get('/api/members/'+phone+'/send_capcha_bind_phone', function(data){
				if(data.error !=""){
					alert(data.error)
				}else{
					alert('验证码发送成功')		
				}
			})
		}else{
			alert('手机格式错误')
		}
	})

	$('form').submit(function(){
		if(validate_phone($('.phone').val()) == null)
		{
			alert('手机格式错误')
			return false
		}else if(validate_capcha($('.capcha').val()) == null)
		{
			alert('验证码格式错误')
			return false
		}
	})
})
</script>
<div class="hd">
    <h1 class="page_title">绑定手机号</h1>
    <p class="page_desc">副标题说明</p>
</div> 
<div class="bd">
 	
<%= form_tag(bind_members_path, method: :get) do %>
 	<div class="weui_cells weui_cells_form">
      <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">手机号</label></div>
          <div class="weui_cell_bd weui_cell_primary">
              <input class="weui_input phone" type="number" name='phone' pattern="\A(13|15|17|18)[0-9]\d{8}\z" placeholder="请输入手机号"/>
          </div>
          <div class="weui_cell_ft">
              <a href="javascript:;" class="send_capcha weui_btn  weui_btn_default">获取验证码</a>
          </div>
      </div>
      <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">验证码</label></div>
          <div class="weui_cell_bd weui_cell_primary">
              <input class="weui_input capcha" type="number" name='capcha' pattern="[0-9]*" placeholder="请输入验证码"/>
          </div>           
      </div>
              
  </div>
  <div class="weui_cells_tips">底部说明文字底部说明文字</div>
  <div class="weui_btn_area">
      <button type='submit' class="weui_btn weui_btn_primary" href="javascript:" >确定</button>
  </div>   	
 </div>
<% end %>

